<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#102f33</item>
        <item name="colorPrimaryDark">#0a2345</item>
        <item name="colorAccent">#0927ec</item>
    </style>

    <style name="quizButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/my_button_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:onClick">openQuestion</item>
    </style>

    <style name="radioButtonAnswer" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="checkBoxAnswer" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">24dp</item>
    </style>

    <style name="textGlow" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">@color/lightBlue</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item tools:targetApi="16" name="android:fontFamily">serif</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="leaderBoard" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item tools:targetApi="16" name="android:fontFamily">serif</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="questionLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@color/blueGreen</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="questionRadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
