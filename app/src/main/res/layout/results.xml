<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_bg">

    <TextView
        android:id="@+id/summaryText"
        style="@style/textGlow"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="40sp"
        android:text=""/>

    <TextView
        android:id="@+id/flavorText"
        style="@style/textGlow"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/summaryText"
        android:textSize="40sp"
        android:text=""/>

    <!-- high score layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_below="@id/flavorText"
        android:layout_margin="2dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/LB1"
            style="@style/leaderBoard"
            android:shadowColor="#42A5F5"
            android:textColor="#3F51B5"
            android:text=""/>

        <TextView
            android:id="@+id/LB2"
            style="@style/leaderBoard"
            android:shadowColor="#2196F3"
            android:textColor="#3949AB"
            android:text=""/>

        <TextView
            android:id="@+id/LB3"
            style="@style/leaderBoard"
            android:shadowColor="#1E88E5"
            android:textColor="#303F9F"
            android:text=""/>

        <TextView
            android:id="@+id/LB4"
            style="@style/leaderBoard"
            android:shadowColor="#1976D2"
            android:textColor="#283593"
            android:text=""/>

        <TextView
            android:id="@+id/LB5"
            style="@style/leaderBoard"
            android:shadowColor="#1565C0"
            android:textColor="#1A237E"
            android:text=""/>
    </LinearLayout>

    <Button
        android:id="@+id/doneButton"
        style="@style/quizButton"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:background="@drawable/dark_bg"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="backToTitle"
        android:text="@string/try_again"/>

</RelativeLayout>
